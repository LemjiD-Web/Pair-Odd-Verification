{% extends 'base.html.twig' %}

{% block title %} PaieImpaieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if app.user %}
<div class="example-wrapper">

    <form action="{{path('app_paie_impaie')}}" method="POST">
        {% if entree != "" %}  
        <div class="alert alert-danger">{{ message}}</div>
       {% endif %}
    <div class="form-group">
        <label for="">Entrer un nombre : </label>
        <input type="text" name="entree" id="entree" class="form-control"  required>
    </div>
  <input type="submit"  class="btn btn-primary" value="Tester">
  </form>
</div>
{% endif %}
{% endblock %}